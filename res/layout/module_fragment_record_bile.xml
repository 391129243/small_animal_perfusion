<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal" >
    <!-- 一半数据一半列表 -->
	<!-- 左边是数据 -->
	<RelativeLayout 
	    android:id="@+id/left_bile_layout"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="1">
	    <RelativeLayout 
	        android:id="@+id/record_bile_data_title_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="42dp"
    		android:background="@color/color_list_title_bg"
	        android:gravity="center_vertical">
	        <TextView 
	            style="@style/serialmsg_list_title_style"
	            android:id="@+id/bile_time"
	            android:layout_height="fill_parent"
	            android:layout_width="248dp"
	            android:text="@string/msg_time"/>
	        <TextView 
	            style="@style/serialmsg_list_title_style"
	            android:id="@+id/bile_total_txt"
	            android:layout_height="fill_parent"
	            android:layout_toRightOf="@id/bile_time"
	            android:layout_width="fill_parent"
	            android:text="@string/record_title_bile_total"/>
	    </RelativeLayout>
	    <ListView 
	        android:id="@+id/record_data_bile_listview"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_below="@id/record_bile_data_title_layout"
	        android:layout_marginTop="2dp"
	        android:background="@color/white"
	        android:divider="@drawable/list_divider"
	        android:dividerHeight="1dp"
	        android:fastScrollEnabled="false"
	        android:headerDividersEnabled="true"
	        android:scrollingCache="true">
		</ListView>
	</RelativeLayout>
	<View 
	    style="@style/vertical_line"/>
	<RelativeLayout
	    android:id="@+id/right_bile_layout"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
		android:layout_weight="2"
		android:background="@color/white">
	    <View
	        android:id="@+id/bile_content_divider_line"
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:layout_centerVertical="true"
		    android:background="@color/black"/>
	   <RelativeLayout 
	        android:id = "@+id/bile_perhour_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_above="@id/bile_content_divider_line">
			<RelativeLayout 
			    android:id="@+id/record_bile_perhour_chart_title_layout"
			    android:layout_width="fill_parent"
			    android:layout_height="42dp"
			    android:background="@color/color_list_title_bg">
			    <TextView 
			        style="@style/serialmsg_list_title_style"
			        android:id="@+id/record_bile_perhour_title_txt"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="12dp"
			        android:text="@string/record_title_trend_bile_perhour"/>
			    	
			</RelativeLayout>
		    <com.github.mikephil.charting.charts.LineChart
		        android:id="@+id/record_bile_perhour_chart"	
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"       
		        android:layout_below="@id/record_bile_perhour_chart_title_layout" 
		        android:padding="4dp"/>	       
	   </RelativeLayout>
	   <RelativeLayout 
	       	android:id = "@+id/bile_total_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_below="@id/bile_content_divider_line">
		    <RelativeLayout 
			    android:id="@+id/record_bile_total_chart_title_layout"
			    android:layout_width="fill_parent"
			    android:layout_height="42dp"
			    android:background="@color/color_list_title_bg">
			    <TextView 
			        style="@style/serialmsg_list_title_style"
			        android:id="@+id/record_bile_total_title_txt"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="12dp"
			        android:text="@string/record_title_trend_bile_totle"/>			    	
			</RelativeLayout>
	        <com.github.mikephil.charting.charts.LineChart
		        android:id="@+id/record_bile_total_chart"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_below="@id/record_bile_total_chart_title_layout" 
		        android:padding="4dp"/>
	   </RelativeLayout>
	   
	</RelativeLayout>
	  
</LinearLayout>
