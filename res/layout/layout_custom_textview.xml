<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:background="@color/color_perfusion_content_bg" >
    <TextView 
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:singleLine="true" 
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
     <TextView 
        android:id="@+id/second_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_txt"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:singleLine="true" 
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible"
        />
     <TextView 
        android:id="@+id/second_content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_title_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:paddingTop="8dp"
        android:singleLine="true" 
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:visibility="visible"
        />
    <TextView 
        android:id="@+id/left_content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_title_txt"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:text="@string/string_null"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        />
    <TextView 
        android:id="@+id/middle_content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_title_txt"
        android:layout_toRightOf="@id/left_content_txt"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="/"        
        android:textColor="@color/white"
        android:textSize="30sp"
        />
    <TextView 
        android:id="@+id/right_content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:layout_marginRight="12dp"
        android:layout_below="@id/second_title_txt"
        android:layout_toRightOf="@id/middle_content_txt"
        android:gravity="center"
        android:text="@string/string_null"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        />
	<TextView 
        android:id="@+id/unit_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/right_content_txt"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="mmHg"
        android:textSize="16sp"/>	
</RelativeLayout>
