<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/timezone_title_layout"
        android:layout_width="fill_parent"
    	android:layout_height="@dimen/top_bar_default_height"
    	android:background="@drawable/common_main_title_bg">
    	<LinearLayout 
	        android:id="@+id/base_function_title_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <ImageView 
	            android:id="@+id/timezone_function_title_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/timezone"
	            android:layout_marginLeft="14dp"
	            android:contentDescription="@null"/>
	        <TextView 
		        android:id="@+id/timezone_title_text"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:gravity="center_vertical"
		        android:layout_marginLeft="14dp"
		        android:layout_marginRight="14dp"
		        android:text="@string/time_timezone_title"
		        android:textSize="28sp"
		        android:textStyle="bold"
		        android:textColor="@color/color_title"/> 
	    </LinearLayout> 

	</RelativeLayout>
	<RelativeLayout 
        android:id="@+id/zone_setting_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="14dp"
        android:background="@drawable/common_main_title_bg"> 
        <ImageView 
            android:id="@+id/time_zone_title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/title_back"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:contentDescription="@null"/>
	</RelativeLayout>
    <!-- 显示时区列表 -->
	<ListView  
		android:id="@+id/timezone_listview"
 		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
  		android:background="@color/white"
  		android:layout_below="@id/timezone_title_layout"
  		android:layout_above="@id/zone_setting_bottom_layout"
   		android:divider="@drawable/list_divider" 
      	android:dividerHeight="1dp"
    	android:fastScrollEnabled="false" 
    	android:headerDividersEnabled="true"
    	android:scrollingCache="true">
	</ListView>   
</RelativeLayout>
