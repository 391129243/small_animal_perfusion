<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 标题 -->
    <include 
        layout="@layout/module_include_base_title_layout_s"
        android:id="@+id/time_title_layout"/> 
	<View 
        style="@style/style_divider_line"
        android:layout_below="@id/time_title_layout"
        android:id="@+id/time_title_divider_line"
        android:background="@color/blue"/>
	<LinearLayout 
	    android:id="@+id/time_set_date_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/item_bg_selector"
	    android:paddingTop="8dp"
	    android:paddingBottom="8dp"
	    android:paddingLeft="24dp"
	    android:layout_below="@id/time_title_divider_line"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/time_set_date_title_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:textSize="20sp"
	        android:text="@string/time_set_date"/>
	    <TextView 
	        android:id="@+id/time_set_date_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop = "4dp"
	        android:textColor="@color/blue"
	        android:textSize="18sp"
	        android:text="@string/time_set_date"/>
	</LinearLayout>
	<View 
	    style="@style/horizontal_line"
	    android:id="@+id/time_divider_line"
	    android:layout_below="@id/time_set_date_layout"/>
	<LinearLayout 
	    android:id="@+id/time_set_time_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="8dp"
	    android:paddingBottom="8dp"
	    android:paddingLeft="24dp"
	    android:layout_below="@id/time_divider_line"
	    android:background="@drawable/item_bg_selector"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/time_set_time_title_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:textSize="20sp"
	        android:text="@string/time_set_time"/>
	    <TextView 
	        android:id="@+id/time_set_time_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop = "4dp"
	        android:textColor="@color/blue"
	        android:textSize="18sp"
	        android:text="@string/time_set_time"/>
	</LinearLayout>
	<View 
	    style="@style/horizontal_line"
	    android:id="@+id/date_divider_line"
	    android:layout_below="@id/time_set_time_layout"/>
	<LinearLayout 
	    android:id="@+id/time_set_zone_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/item_bg_selector"
	    android:visibility="gone"
	    android:paddingTop="8dp"
	    android:paddingBottom="8dp"
	    android:paddingLeft="24dp"
	    android:layout_below="@id/date_divider_line"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/time_set_zone_title_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:textSize="20sp"
	        android:text="@string/time_select_time_zone"/>
	    <TextView 
	        android:id="@+id/time_set_zone_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop = "4dp"
	        android:textColor="@color/blue"
	        android:textSize="18sp"
	        android:text="@string/time_set_time"/>
	</LinearLayout>
	<View 
	    style="@style/horizontal_line"
	    android:id="@+id/date_divider_zone_line"
	    android:layout_below="@id/time_set_zone_layout"/>
	<RelativeLayout 
        android:id="@+id/date_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="14dp"
        android:background="@drawable/common_main_title_bg"> 
        <ImageView 
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/title_back"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:contentDescription="@null"/>
	</RelativeLayout>
	<View 
	    android:id="@+id/time_setting_empty_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/date_bottom_layout"
	    android:layout_below="@id/date_divider_zone_line"
	    android:background="@color/white"/>
</RelativeLayout>
