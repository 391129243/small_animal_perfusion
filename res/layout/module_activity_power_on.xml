<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_common_bg">
    

    <TextView 
        android:id="@+id/mode_liver_persion_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_marginLeft="300dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="@string/mode_liver_perfusion"
        android:drawableTop="@drawable/mode_liver_options_selector" />
    <TextView 
        android:id="@+id/mode_kidney_persion_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_alignParentRight="true"        
        android:layout_marginRight="300dp"
        android:layout_centerVertical="true"
        android:text="@string/mode_kidney_perfusion"
        android:drawableTop="@drawable/mode_kidney_options_selector" />

</RelativeLayout>
