<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_temp_layout"
    android:layout_width="122dp"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/shape_gradient_artery_txt_bg">
    <TextView 
		android:id="@+id/custom_temp_title_txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"	
		android:layout_centerHorizontal="true"     
		android:gravity="center"
		android:textSize="16sp"
		android:text="@string/hepatic_artery"
		android:textColor="@color/white"/>
    <TextView 
		android:id="@+id/custom_temp_num_txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"	
		android:layout_below="@id/custom_temp_title_txt"   
		android:layout_centerHorizontal="true" 
		android:gravity="center"
		android:text="@string/string_null"
		android:textStyle="bold"
		android:textSize="24sp"
		android:textColor="@color/white"/>

</RelativeLayout>
