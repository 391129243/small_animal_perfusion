<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 标题 -->
    <RelativeLayout
        android:id="@+id/wifi_title_layout"
        android:layout_width="fill_parent"
    	android:layout_height="@dimen/top_bar_default_height"
    	android:background="@drawable/common_main_title_bg">
    	<LinearLayout 
	        android:id="@+id/base_function_title_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <ImageView 
	            android:id="@+id/base_function_title_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/function_title_wifi"
	            android:layout_marginLeft="14dp"
	            android:contentDescription="@null"/>
	        <TextView 
		        android:id="@+id/base_title_text"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:gravity="center_vertical"
		        android:layout_marginLeft="14dp"
		        android:layout_marginRight="14dp"
		        android:text="@string/wlan_title"
		        android:textSize="28sp"
		        android:textStyle="bold"
		        android:textColor="@color/color_title"/> 
	    </LinearLayout> 

	</RelativeLayout>
    <!-- 开关wlan -->
    <RelativeLayout 
        android:id="@+id/wlan_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi_title_layout"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView 
            android:id="@+id/wlan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/wlan_close"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView 
            android:id="@+id/connect_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/wlan_txt"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/blue"/>
        
		<CheckBox 
            style="@style/on_off_temp_control_checkbox_style"
            android:id="@+id/wifi_control_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="24dp"
            />
    </RelativeLayout> 
	<View 
	    android:id="@+id/horizontal_line_text"
	    style="@style/horizontal_line"
	    android:layout_below="@id/wlan_title_layout"/>	
    <RelativeLayout 
        android:id="@+id/wifi_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="14dp"
        android:background="@drawable/common_main_title_bg"> 
        <ImageView 
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/title_back"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:contentDescription="@null"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/wifi_center_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/horizontal_line_text"
		android:layout_above="@id/wifi_bottom_layout"
		android:background="@color/white">
	    <ListView  
			android:id="@+id/wifi_listview"
	 		android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
	   		android:divider="@drawable/list_divider" 
	      	android:dividerHeight="1dp"
	    	android:fastScrollEnabled="false" 
	    	android:headerDividersEnabled="true"
	    	android:scrollingCache="true">
		</ListView>
	    <!-- wifi列表 -->
		<TextView 
		    android:id="@+id/wifi_seaching_txt"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/wlan_searching"
		    android:layout_centerInParent="true"
		    android:textSize="16sp"
		    android:textColor="@color/gray" />
	</RelativeLayout>

</RelativeLayout>
