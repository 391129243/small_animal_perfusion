<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
   	android:layout_height="58dp"
   	android:paddingTop="8dp"
   	android:paddingBottom="8dp"
   	android:background="@drawable/color_item_bg_selector">
   	<TextView 
	    style="@style/serialmsg_list_title_style"
	    android:id="@+id/item_record_history_index"
	    android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:textColor="@color/black"
	    android:layout_centerVertical="true"/>  
	<View 
        android:id="@+id/item_record_index_divider"
        android:layout_toRightOf="@id/item_record_history_index"
        style="@style/vertical_line"/>
    <TextView 
        style="@style/serialmsg_list_title_style"
        android:id="@+id/item_list_record_history_time"
        android:layout_toRightOf="@id/item_record_index_divider"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerVertical="true"/>  
    <View 
        android:id="@+id/item_record_divider"
        android:layout_toRightOf="@id/item_list_record_history_time"
        style="@style/vertical_line"/>
    <TextView 
        style="@style/serialmsg_list_title_style"
        android:id="@+id/item_list_record_history_id"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/item_record_divider"
        android:layout_centerVertical="true"/>  
    <View 
        android:id="@+id/item_record_divider_one"
        android:layout_toRightOf="@id/item_list_record_history_id"
        style="@style/vertical_line"/>
    <TextView 
        style="@style/serialmsg_list_title_style"
        android:id="@+id/item_list_record_history_liver_weight"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/item_record_divider_one"
        android:layout_centerVertical="true"/>
    <View 
        android:id="@+id/item_record_divider_two"
        android:layout_toRightOf="@id/item_list_record_history_liver_weight"
        style="@style/vertical_line"/>
    <!-- 肝动脉灌注模式 -->
    <TextView 
        style="@style/serialmsg_list_title_style"
        android:id="@+id/item_list_record_history_artery_mode"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/item_record_divider_two"
        android:layout_centerVertical="true"/>
    <View 
        android:id="@+id/item_record_divider_three"
        android:layout_toRightOf="@id/item_list_record_history_artery_mode"
        style="@style/vertical_line"/>
    <TextView 
        style="@style/serialmsg_list_title_style"
        android:id="@+id/item_list_record_history_vein_mode"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/item_record_divider_three"
        android:layout_centerVertical="true"/>
    <View 
        android:id="@+id/item_record_divider_four"
        android:layout_toRightOf="@id/item_list_record_history_vein_mode"
        style="@style/vertical_line"/>


    <CheckBox 
        android:id="@+id/item_list_record_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true" 
        android:layout_toRightOf="@id/item_record_divider_four"
        android:layout_marginLeft="84dp"
        android:focusable="false"
        android:clickable="false"
        android:visibility="visible"
        android:button="@null"
        android:background="@drawable/item_checkbox_selector"
       />
</RelativeLayout>
