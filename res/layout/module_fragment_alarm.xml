<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/color_blood_gas_bg">
    <!-- 日期选择 -->
    <LinearLayout 
        android:id="@+id/date_select_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/date_select_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_select_time_title"
            android:layout_marginLeft="12dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView 
            android:id="@+id/date_select_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:layout_marginLeft="12sp"
            android:textSize="18sp"
            android:textColor="@color/color_choice_time_selector"
            android:textStyle="bold"
            android:drawableRight="@drawable/arrow_down"/>
        
    </LinearLayout>
    <View
        android:id="@+id/alarm_msg_list_divider_line"
        android:layout_below="@id/date_select_layout"
        style="@style/horizontal_line"/>
    <LinearLayout 
        android:id="@+id/alarm_log_list_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_list_title"
        android:layout_below="@id/alarm_msg_list_divider_line"
        android:gravity="center_vertical"
        android:background="@color/color_list_title_bg">
		<TextView 
            style="@style/alarm_list_title_style"
	        android:id="@+id/alarm_time"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:text="@string/alarm_time"/>
        <View 
            style="@style/vertical_line"
            android:background="@color/black"/>
        <!-- 肝脏id -->
        <TextView 
            style="@style/alarm_list_title_style"
	        android:id="@+id/liver_id_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:text="@string/record_perfusion_id"/>


        <View 
            style="@style/vertical_line"
            android:background="@color/black"/>
    	<TextView 
    	    style="@style/alarm_list_title_style"
	        android:id="@+id/alarm_msg_txt"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:text="@string/alarm_info_detail"/>
    	<View 
            style="@style/vertical_line"
            android:background="@color/black"/>
    	<TextView 
    	    style="@style/alarm_list_title_style"
	        android:id="@+id/alarm_level"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:text="@string/alarm_level"/>
    	<View 
            style="@style/vertical_line"
            android:background="@color/black"/>
        
    </LinearLayout>
    <View 
        style="@style/horizontal_line"
        android:id="@+id/divider_line"
        android:layout_below="@id/alarm_log_list_title"/>
    <ListView 
        android:id="@+id/alarm_log_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_line"
        android:background="@color/white"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="false"
        android:headerDividersEnabled="true"
        android:scrollingCache="true">
        
    </ListView>
</RelativeLayout>
