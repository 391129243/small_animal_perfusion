<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/color_setting_item_bg">   
    <RelativeLayout 
        android:id="@+id/pressure_down_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <TextView           
	        style="@style/style_set_alarm_title"
	        android:id="@+id/pressure_drop_title"
	        android:text="@string/set_pre_down"
	        android:textSize="@dimen/font_size_large_20sp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"/>

		<!-- 设低极限值 -->
		<com.gidi.bio_console.view.AddSubView 
		    android:id="@+id/set_min_pressure_txt"
		    android:layout_width="wrap_content"
	        android:layout_height="80dp"
	        android:gravity="center_vertical"
			android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        >	    
		</com.gidi.bio_console.view.AddSubView>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/pressure_up_layout"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pressure_down_layout"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
	
	    <TextView           
	        style="@style/style_set_alarm_title"
	        android:id="@+id/pressure_up_title"
	        android:text="@string/set_pre_up"
	        android:textSize="@dimen/font_size_large_20sp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"/>

        <!-- 设置高极限值 -->

		<com.gidi.bio_console.view.AddSubView
		    android:id="@+id/set_max_pressure_txt"
		    android:layout_width="wrap_content"
		    android:layout_height="68dp"
		    android:gravity="center_vertical"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true" >
		</com.gidi.bio_console.view.AddSubView>

    </RelativeLayout>
  	
</RelativeLayout>
