<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 标题 -->
    <include 
        layout="@layout/module_include_base_title_layout_s"
        android:id="@+id/language_title_layout"/>
	<View 
        style="@style/style_divider_line"
        android:id="@+id/divider_line_one"
        android:layout_below="@id/language_title_layout"
        android:background="@color/blue"/>

	<RelativeLayout 
        android:id="@+id/language_setting_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="14dp"
        android:background="@drawable/common_main_title_bg"> 
        <ImageView 
            android:id="@+id/language_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/title_back"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:contentDescription="@null"/>
	</RelativeLayout>
	<LinearLayout
	    android:id="@+id/language_layout"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/divider_line_one"
	    android:layout_above="@id/language_setting_bottom_layout"
	    android:background="@color/white"
	    android:orientation="vertical">
	    <!-- 中文 -->
	    <TextView 
	        android:id="@+id/language_chinese"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="24dp"
    		android:paddingRight="12dp"
    		android:paddingTop="12dp"
    		android:paddingBottom="12dp"
    		android:text="@string/chinese"
    		android:textColor="@color/blue"
	        android:textSize="20sp"/>
	    <View 
	    	style="@style/horizontal_line"/>  
	     <TextView 
	        android:id="@+id/language_english"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="24dp"
    		android:paddingRight="12dp"
    		android:paddingTop="12dp"
    		android:paddingBottom="12dp"
    		android:text="@string/english"
    		android:textColor="@color/blue"
	        android:textSize="20sp"/>
	    <View 
	    	style="@style/horizontal_line"/>  
	</LinearLayout>
</RelativeLayout>
