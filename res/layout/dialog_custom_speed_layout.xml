<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   <LinearLayout
		android:layout_width="680dp"  
		android:layout_height="wrap_content" 
		android:paddingLeft="24dp"
		android:paddingRight="24dp"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"		
		android:layout_gravity="center"
        android:orientation="vertical"
        android:alpha="0.8"
        android:background="@drawable/dialog_bg"
        >  
        <!-- android:background="@drawable/shape_custom_dialog_bg"  -->
        <ImageView 
		    android:id="@+id/dialog_title_img"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_prompt"
		    android:layout_gravity="center_horizontal"	    
		    android:contentDescription="@null"/>
  		<TextView  
			android:id="@+id/title"  
            android:layout_width="fill_parent"  
            android:layout_height="52dp"  
            android:gravity="center"  
            android:text="@string/prompt"  
            android:visibility="visible"
            android:textColor="@color/blue"
            android:textSize="26sp" /> 

		<LinearLayout  
			android:id="@+id/content"  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:layout_marginBottom="24dp"
            android:gravity="center" >  
 			<TextView  
				android:id="@+id/message"   
				android:layout_width="fill_parent"  
				android:layout_height="wrap_content"  
				android:gravity="left|center"  
                android:paddingBottom="15dp"  
                android:paddingLeft="20dp"  
                android:paddingRight="20dp"  
                android:paddingTop="15dp"
                android:textSize="20sp" />  
		</LinearLayout>  


		<RelativeLayout  
			android:layout_width="fill_parent"  
			android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"   >  

			<TextView  
				android:id="@+id/positive_btn"  				
				android:layout_width="160dp"
				android:layout_height="wrap_content"
	            android:text="@string/dialog_ok"
	            android:textColor="@color/color_dialog_temp_btn_selector"
	            android:padding="8dp"
	            android:textSize="24sp" 
	            android:background="@drawable/dialog_temp_setting_btn_bg"
				android:gravity="center"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="86dp"/>  

		   
 		   <TextView  
				android:id="@+id/negative_btn"  
				android:layout_width="160dp"
	            android:layout_height="wrap_content"
	            android:padding="8dp"
	            android:text="@string/dialog_cancel"
	            android:textSize="24sp"
	            android:textColor="@color/color_dialog_temp_btn_selector"
	            android:background="@drawable/dialog_temp_setting_btn_bg"
	            android:gravity="center"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="86dp"/> 
		</RelativeLayout>  
	</LinearLayout>

</FrameLayout>
