<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    xmlns:custom="http://schemas.android.com/apk/res/com.gidi.bio_console">
    <!-- 标题 -->
    <include 
        layout="@layout/module_include_base_title_layout_s"
        android:id="@+id/about_guide_title_layout"/>
	<View 
        style="@style/style_divider_line"
        android:layout_below="@id/about_guide_title_layout"
        android:id="@+id/divider_line_one"
        android:background="@color/blue"/>
	<RelativeLayout 
        android:id="@+id/about_setting_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="14dp"
        android:background="@drawable/common_main_title_bg"> 
        <ImageView 
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/title_back"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:contentDescription="@null"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/content_layout"
	    android:layout_below="@id/divider_line_one"
	    android:layout_above="@id/about_setting_bottom_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/common_main_content_bg">
        <!-- 图标 -->

       <ImageView
            android:id="@+id/about_system_img"
            android:layout_width="440dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_logo" />
	    
	    <TextView 
	        android:id="@+id/about_software_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/about_system_img"
	        android:layout_marginTop="15dp"
	        android:layout_centerHorizontal="true"
	        android:textColor="@color/white"
	        android:textSize="32sp"
	        android:textStyle="bold"
	        android:text="@string/about_software_name"/>
	    <!-- 型号 -->
	    <TextView 
	        android:id="@+id/about_model_title_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/about_software_text"
	        android:layout_alignLeft="@id/about_software_text"
	        android:layout_marginTop="18dp"
	        android:textColor="@color/white"
	        android:textSize="24sp"
	        android:text="@string/about_title_model"/>
	    <TextView 
	        android:id="@+id/about_model_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/about_software_text"
	        android:layout_toRightOf="@id/about_model_title_txt"
	        android:layout_marginTop="18dp"
	        android:layout_marginLeft="12dp"
	        android:textColor="@color/white"
	        android:textSize="24sp"
	        android:text="@string/about_software_model"/>
	    <!-- 版本号 -->
	    <TextView 
	        android:id="@+id/about_version_title_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/about_model_title_txt"
	        android:layout_alignLeft="@id/about_model_title_txt"
	        android:layout_marginTop="18dp"
	        android:textColor="@color/white"
	        android:textSize="24sp"
	        android:text="@string/about_title_version"/>
	    <TextView 
	        android:id="@+id/about_version_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/about_model_title_txt"
	        android:layout_toRightOf="@id/about_version_title_txt"
	        android:layout_marginTop="18dp"
	        android:layout_marginLeft="12dp"
	        android:textColor="@color/white"
	        android:textSize="24sp"
	        android:text="@string/about_software_model"/>
	    <!-- 生产日期 -->
	    <TextView 
	        android:id="@+id/about_production_title_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/about_version_title_txt"
	        android:layout_alignLeft="@id/about_version_title_txt"
	        android:layout_marginTop="18dp"
	        android:textColor="@color/white"
	        android:textSize="24sp"
	        android:text="@string/about_title_production_date"/>
	    <TextView 
	        android:id="@+id/about_production_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/about_version_title_txt"
	        android:layout_toRightOf="@id/about_production_title_txt"
	        android:layout_marginTop="18dp"
	        android:layout_marginLeft="12dp"
	        android:textColor="@color/white"
	        android:textSize="24sp"
	        android:text="@string/about_software_model"/>
	    <TextView 
	        android:id="@+id/about_cosyright_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="12dp"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:text="@string/about_copyright"/>
	</RelativeLayout>

</RelativeLayout>
