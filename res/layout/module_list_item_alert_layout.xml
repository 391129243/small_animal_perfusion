<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" 
    android:gravity="center_vertical"
    android:background="@color/white">
	<TextView 
        style="@style/style_alarm_log_txt"
        android:id="@+id/alarm_item_time"
	    android:layout_width="0dp"
	    android:layout_weight="2"
	    android:layout_height="wrap_content"
        android:text="@string/alarm_time"/>
   <View 
        style="@style/vertical_line"/>
    <!-- 肝脏id -->
   <TextView 
        style="@style/style_alarm_log_txt"
	    android:id="@+id/liver_id_txt"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="2"
	    android:text="@string/record_perfusion_id"/>


    <View 
        style="@style/vertical_line"/>
    <TextView 
        style="@style/style_alarm_log_txt"
        android:id="@+id/alarm_item_msg_txt"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="4"
        android:text="@string/alarm_info_detail"/>
    <View 
        style="@style/vertical_line"/>
    <TextView 
        style="@style/style_alarm_log_txt"
        android:id="@+id/alarm_item_level"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
        android:text="@string/alarm_time"
        android:textSize="20sp"
        android:textColor="@color/color_alarm_level"/>
    <View 
        style="@style/vertical_line"/>
    

</LinearLayout>
