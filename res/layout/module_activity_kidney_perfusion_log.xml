<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!-- 标题 -->
    <include 
        layout="@layout/module_include_base_title_layout_s"
        android:id="@+id/perfusion_log_guide_title_layout"/>

    <View 
        style="@style/style_divider_line"
        android:layout_below="@id/perfusion_log_guide_title_layout"
        android:id="@+id/divider_line_one"
        android:background="@color/blue"/>
    <!-- 搜索栏时间过滤 --> 
    <RelativeLayout 
        android:id="@+id/record_history_log_date_research_layout"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/black"
        android:layout_below="@id/divider_line_one">
		<!-- 搜索起始时间 -->
        <TextView 
            style="@style/serialmsg_list_title_style"
            android:id="@+id/record_history_query_start_date"
            android:layout_width="220dp"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:textColor="@color/color_choice_time_selector"
            android:drawableRight="@drawable/arrow_down"/>
        <TextView 
            style="@style/serialmsg_list_title_style"
            android:id="@+id/record_history_to_date_hint"
            android:layout_toRightOf="@id/record_history_query_start_date"
            android:layout_marginLeft="56dp"
            android:layout_centerVertical="true"
            android:text="@string/record_perfusion_to"
            android:textSize="22sp"/>
        <!-- 搜索结束时间 -->
        <TextView 
            style="@style/serialmsg_list_title_style"
            android:id="@+id/record_history_query_end_date"
            android:layout_width="220dp"  
            android:layout_toRightOf="@id/record_history_to_date_hint"
            android:layout_marginLeft="56dp"
            android:layout_centerVertical="true"           
            android:drawableRight="@drawable/arrow_down"
            android:textColor="@color/color_choice_time_selector"
            android:textSize="22sp"/>
        <TextView 
            style="@style/serialmsg_list_title_style"
            android:id="@+id/record_history_output_txt"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/record_output"
            android:textColor="@color/seach_export_txt_color_selector"
            android:background="@drawable/common_btn_zero_bg_selector"/>
        <View 
	        android:id="@+id/search_layout_divider"
	        android:layout_toLeftOf="@id/record_history_output_txt"
	        android:layout_marginRight="12dp"
	        style="@style/vertical_line"/>
        <!-- 查询 -->
        <TextView 
            style="@style/serialmsg_list_title_style"
            android:id="@+id/record_history_search_txt"
            android:layout_toLeftOf="@id/search_layout_divider"
            android:layout_marginRight="12dp"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"         
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="@string/record_perfusion_search"
            android:textColor="@color/seach_export_txt_color_selector"
            android:background="@drawable/common_btn_zero_bg_selector"/>
        <!-- 删除 -->
        <TextView 
            style="@style/serialmsg_list_title_style"
            android:id="@+id/record_history_delete_txt"
            android:layout_toLeftOf="@id/record_history_search_txt"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize = "18sp"
            android:text="@string/record_perfusion_delete"
            android:textColor="@color/seach_export_txt_color_selector"
            android:background="@drawable/common_btn_zero_bg_selector"/>
    </RelativeLayout>
    <RelativeLayout         
        android:id="@+id/record_history_log_list_title"
        android:layout_width="fill_parent"
    	android:layout_height="58dp"
    	android:paddingTop="8dp"
    	android:paddingBottom="8dp"
    	android:layout_below="@id/record_history_log_date_research_layout"
    	android:background="@color/color_list_title_bg">
        <TextView 
	        style="@style/serialmsg_list_title_style"
	        android:id="@+id/item_record_history_index"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="@string/msg_index"/>  
	    <View 
	        android:id="@+id/item_index_divider"
	        android:layout_toRightOf="@id/item_record_history_index"
	        style="@style/vertical_line"/>
        <TextView 
	        style="@style/serialmsg_list_title_style"
	        android:id="@+id/item_record_history_time"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/item_index_divider"
	        android:layout_centerVertical="true"
	        android:text="@string/msg_time"/>  
	    <View 
	        android:id="@+id/item_record_divider"
	        android:layout_toRightOf="@id/item_record_history_time"
	        style="@style/vertical_line"/>
        <TextView 
	        style="@style/serialmsg_list_title_style"
	        android:id="@+id/item_record_history_id"
	        android:layout_width="220dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/item_record_divider"
	        android:layout_centerVertical="true"
	        android:text="@string/record_perfusion_id"/>  
	    <View 
	        android:id="@+id/item_record_divider_one"
	        android:layout_toRightOf="@id/item_record_history_id"
	        style="@style/vertical_line"/>
	    <!-- 左肾动脉重量 -->
	    <TextView 
	        style="@style/serialmsg_list_title_style"
	        android:id="@+id/item_record_history_left_kidney_weight"
	        android:layout_width="130dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/item_record_divider_one"
	        android:layout_centerVertical="true"
	        android:text="@string/record_perfusion_left_kidney_weight"/>
	    <View 
	        android:id="@+id/title_record_divider_left_kidney_weight"
	        android:layout_toRightOf="@id/item_record_history_left_kidney_weight"
	        style="@style/vertical_line"/>
	    <!-- 右肾动脉重量 -->
	    <TextView 
	        style="@style/serialmsg_list_title_style"
	        android:id="@+id/item_record_history_right_kidney_weight"
	        android:layout_width="130dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/title_record_divider_left_kidney_weight"
	        android:layout_centerVertical="true"
	        android:text="@string/record_perfusion_right_kidney_weight"/>
	    <View 
	        android:id="@+id/title_divider_right_kidney_weight"
	        android:layout_toRightOf="@id/item_record_history_right_kidney_weight"
	        style="@style/vertical_line"/>
	    <!-- 肝动脉灌注模式 -->
	    <TextView 
	        style="@style/serialmsg_list_title_style"
	        android:id="@+id/item_record_history_artery_mode"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/title_divider_right_kidney_weight"
	        android:layout_centerVertical="true"
	        android:text="@string/preset_left_kidney_artery_mode"/>
	    <View 
	        android:id="@+id/item_record_divider_three"
	        android:layout_toRightOf="@id/item_record_history_artery_mode"
	        style="@style/vertical_line"/>
	    <TextView 
	        style="@style/serialmsg_list_title_style"
	        android:id="@+id/item_record_history_vein_mode"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/item_record_divider_three"
	        android:layout_centerVertical="true"
	        android:text="@string/preset_right_kidney_artery_mode"/>
	    <View 
	        android:id="@+id/item_record_divider_four"
	        android:layout_toRightOf="@id/item_record_history_vein_mode"
	        style="@style/vertical_line"/>

	    <TextView 
	        style="@style/serialmsg_list_title_style"
	        android:id="@+id/item_record_history_duration"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/item_record_divider_four"
	        android:layout_centerVertical="true"
	        android:text="@string/record_perfusion_export_check"/>

    </RelativeLayout> 
    <!-- usb disk layout -->
    <RelativeLayout 
        android:id="@+id/usb_disk_state_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="14dp">
	    <ImageView 
	        android:id="@+id/usb_state_img"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:src="@drawable/icon_usb_disk"
	        android:contentDescription="@null"/>
       <TextView 
	        android:id="@+id/usb_state_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="48dp"
	        android:gravity="center_vertical"
	        android:layout_toRightOf="@id/usb_state_img"
	        android:textSize="24sp"
	        android:textColor="@color/red"
	        android:textStyle="bold"
	        android:layout_marginRight="14dp"/>
       <ImageView 
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/title_back"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:contentDescription="@null"/>
    </RelativeLayout>

    <View 
	    style="@style/horizontal_line"
	    android:id="@+id/devider_line"
	    android:layout_above="@id/usb_disk_state_layout"/>
	<ListView 
	    android:id="@+id/record_history_log_listview"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/record_history_log_list_title"
	    android:layout_above="@id/devider_line"
	    android:layout_marginTop="2dp"
        android:background="@color/white"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="false"
        android:headerDividersEnabled="true"
        android:scrollingCache="true">
	</ListView>

</RelativeLayout>
