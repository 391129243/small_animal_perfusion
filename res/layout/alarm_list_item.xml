<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp" 
    android:gravity="center_vertical"
    android:background="@color/white">
    <TextView 
        style="@style/style_alarm_log_txt"
        android:id="@+id/id_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/id"/>
    <View 
        style="@style/vertical_line"/>
    
    <TextView 
        style="@style/style_alarm_log_txt"
        android:id="@+id/alarm_item_pump_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>
    <View 
        style="@style/vertical_line"/>
    <TextView 
        style="@style/style_alarm_log_txt"
        android:id="@+id/alarm_item_msg_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="@string/alarm_info_detail"/>
    <View 
        style="@style/vertical_line"/>
    <TextView 
        style="@style/style_alarm_log_txt"
        android:id="@+id/alarm_item_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/alarm_time"
        android:textColor="@color/color_alarm_level"/>
    <View 
        style="@style/vertical_line"/>
    <TextView 
        style="@style/style_alarm_log_txt"
        android:id="@+id/alarm_item_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="@string/alarm_time"/>

</LinearLayout>
